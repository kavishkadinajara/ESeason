<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Default state (unfocused) -->
    <item>
        <shape>
            <solid android:color="#FFFFFF"/> <!-- Background color for EditText -->
            <stroke android:width="1dp" android:color="#CCCCCC"/> <!-- Light gray border -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
            <padding android:left="12dp" android:right="12dp" android:top="8dp" android:bottom="8dp"/> <!-- Inner padding -->
        </shape>
    </item>

    <!-- Focused state -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="#FFFFFF"/>
            <stroke android:width="2dp" android:color="#4CAF50"/> <!-- Green border when focused -->
            <corners android:radius="8dp"/>
            <padding android:left="12dp" android:right="12dp" android:top="8dp" android:bottom="8dp"/>
        </shape>
    </item>

</selector>
